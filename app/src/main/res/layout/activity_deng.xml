<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_deng"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lv.mama.lv.mine.Deng">
    <Button
        android:id="@+id/deng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="立即注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deng"
        android:layout_toRightOf="@+id/ed2"
        android:layout_toEndOf="@+id/ed2"
        android:id="@+id/tex3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="密码"
        android:ems="10"
        android:id="@+id/ed2"
        android:layout_above="@+id/tex3"
        android:layout_alignLeft="@+id/ed1"
        android:layout_alignStart="@+id/ed1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="手机号码"
        android:ems="10"
        android:id="@+id/ed1"
        android:layout_above="@+id/ed2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@mipmap/timg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:id="@+id/dishanf"
        android:layout_below="@+id/deng"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_default_user_head"
        android:layout_above="@+id/ed1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
